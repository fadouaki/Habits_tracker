<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/hCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="3dp"
        android:layout_marginEnd="16dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="22dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:padding="5dp"
            android:background="@drawable/bg_task_item"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/hProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/backIconCard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#FFF6F6"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/hIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/task_exemple" />
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Dashboard Design"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hTimeTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="08:00 AM 10:15 AM" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/taskcompleted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/completed_task_bg"
                        android:gravity="center"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="5dp"
                        android:text="Complete"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/taskinirogress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/in_progress_task_bg"
                        android:gravity="center"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="5dp"
                        android:text="In progress"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/l_priority"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/low_priority"
                        android:gravity="center"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="5dp"
                        android:text="Low priority"
                        android:textColor="#8045BA"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/m_priority"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/medium_priority"
                        android:gravity="center"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="5dp"
                        android:text="Medium priority"
                        android:textColor="#4597BA"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/h_priority"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/hight_priority"
                        android:gravity="center"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="5dp"
                        android:text="Hight priority"
                        android:textColor="#BA4545"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hStartPause"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginVertical="5dp"
                    android:src="@drawable/detail_task" />

                <ImageView
                    android:id="@+id/hDelete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginVertical="5dp"
                    android:src="@drawable/ic_delete" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>